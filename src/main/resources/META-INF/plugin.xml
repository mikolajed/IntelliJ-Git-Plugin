<idea-plugin>
    <id>com.github.mikolajed.intellijgitplugin</id>
    <name>IntelliJGitPlugin</name>
    <vendor>mikolajed</vendor>
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <idea-version since-build="243" until-build="253.*"/>

    <actions>
        <action id="com.github.mikolajed.intellijgitplugin.RenameCommitAction"
                class="com.github.mikolajed.intellijgitplugin.RenameCommitAction" text="Rename Current Commit"
                description="Renames the most recent Git commit">
            <add-to-group group-id="Git.MainMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>